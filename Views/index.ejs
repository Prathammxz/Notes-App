<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Notes</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

  <!-- Font Awesome CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

  <style>
    body {
      background: linear-gradient(to right, #73c8ff, #0086ff);
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    .container-box {
      max-width: 800px;
      padding: 20px;
      background-color: #f8f9fa;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      text-align: center;
      overflow-y: auto; 
      height: 90vh; 
    }

    .note-card {
      margin-bottom: 20px;
      margin-right: 10px;
      margin-left: 10px;
    }

    .row-cols-2 {
      flex-wrap: wrap;
    }

    .text-center {
      text-align: center;
    }

    .button-container {
      text-align: left;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container-box">
    <div class="container">
      <div class="text-center">
        <h1>All Notes</h1>
      </div>
      <div class="row row-cols-2">
        <% notes.forEach(notes => { %>
          <div class="col mb-3">
            <div class="card note-card">
              <div class="card-body">
                <h5 class="card-title"><b>Title:</b> <%- notes.title %></h5>
                <p class="card-text"><b>Description:</b> <%- notes.description %></p>
                <p class="card-text"><b>Written by:</b> <%- notes.author %></p>
                <p class="card-text"><b>Created at: </b> <%- notes.createdAt %></p>
                <a href="/single/<%- notes.id %>">See more</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="button-container">
        <a href="/createNote" class="btn btn-primary"><i class="fas fa-plus"></i> Note </a>
      </div>
    </div>
  </div>

  <!-- Font Awesome JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
